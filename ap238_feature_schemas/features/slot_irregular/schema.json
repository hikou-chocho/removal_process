{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Irregular Slot Feature",
  "description": "Slot defined by a centerline curve and width.",
  "type": "object",
  "properties": {
    "feature_type": {
      "type": "string",
      "const": "slot_irregular"
    },
    "id": {
      "type": "string",
      "description": "Unique feature identifier."
    },
    "metadata": {
      "type": "object",
      "properties": {
        "source": {
          "type": "object",
          "properties": {
            "primary_standard": {
              "type": "string"
            },
            "reference_standards": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "primary_standard"
          ],
          "default": {
            "primary_standard": "ISO 10303-238",
            "reference_standards": [
              "ISO 10303-224"
            ]
          }
        }
      },
      "required": [
        "source"
      ]
    },
    "params": {
      "type": "object",
      "properties": {
        "csys_id": {
          "type": "string"
        },
        "centerline": {
          "type": "array",
          "description": "Polyline describing slot centerline.",
          "items": {
            "type": "object",
            "properties": {
              "x": {
                "type": "number"
              },
              "y": {
                "type": "number"
              }
            },
            "required": [
              "x",
              "y"
            ]
          },
          "minItems": 2
        },
        "width": {
          "type": "number"
        },
        "depth": {
          "type": "number"
        }
      },
      "required": [
        "csys_id",
        "centerline",
        "width",
        "depth"
      ]
    }
  },
  "required": [
    "feature_type",
    "id",
    "params"
  ],
  "additionalProperties": false
}