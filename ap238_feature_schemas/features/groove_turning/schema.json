{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Turning Groove Feature",
  "description": "Annular groove on OD or ID.",
  "type": "object",
  "properties": {
    "feature_type": {
      "type": "string",
      "const": "groove_turning"
    },
    "id": {
      "type": "string",
      "description": "Unique feature identifier."
    },
    "metadata": {
      "type": "object",
      "properties": {
        "source": {
          "type": "object",
          "properties": {
            "primary_standard": {
              "type": "string"
            },
            "reference_standards": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "primary_standard"
          ],
          "default": {
            "primary_standard": "ISO 10303-238",
            "reference_standards": [
              "ISO 14649-121"
            ]
          }
        }
      },
      "required": [
        "source"
      ]
    },
    "params": {
      "type": "object",
      "properties": {
        "csys_id": {
          "type": "string"
        },
        "axis": {
          "type": "string",
          "enum": [
            "Z"
          ]
        },
        "z_position": {
          "type": "number"
        },
        "width": {
          "type": "number"
        },
        "depth": {
          "type": "number"
        },
        "diameter": {
          "type": "number"
        },
        "side": {
          "type": "string",
          "enum": [
            "OD",
            "ID"
          ]
        }
      },
      "required": [
        "csys_id",
        "axis",
        "z_position",
        "width",
        "depth",
        "diameter",
        "side"
      ]
    }
  },
  "required": [
    "feature_type",
    "id",
    "csys_id",
    "axis",
    "z_position",
    "width",
    "depth",
    "diameter",
    "side"
  ],
  "additionalProperties": false
}