{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Simple Hole Feature",
  "description": "Straight cylindrical drilled hole.",
  "type": "object",
  "properties": {
    "feature_type": {
      "type": "string",
      "const": "simple_hole"
    },
    "id": {
      "type": "string",
      "description": "Unique feature identifier."
    },
    "metadata": {
      "type": "object",
      "properties": {
        "source": {
          "type": "object",
          "properties": {
            "primary_standard": {
              "type": "string"
            },
            "reference_standards": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "primary_standard"
          ],
          "default": {
            "primary_standard": "ISO 10303-238",
            "reference_standards": [
              "ISO 14649-11"
            ]
          }
        }
      },
      "required": [
        "source"
      ]
    },
    "params": {
      "type": "object",
      "properties": {
        "csys_id": {
          "type": "string"
        },
        "origin_x": {
          "type": "number"
        },
        "origin_y": {
          "type": "number"
        },
        "axis": {
          "type": "string",
          "enum": [
            "+X",
            "-X",
            "+Y",
            "-Y",
            "+Z",
            "-Z"
          ]
        },
        "diameter": {
          "type": "number"
        },
        "depth": {
          "type": "number"
        },
        "through": {
          "type": "boolean",
          "description": "True if through-hole."
        }
      },
      "required": [
        "csys_id",
        "origin_x",
        "origin_y",
        "axis",
        "diameter",
        "depth",
        "through"
      ]
    }
  },
  "required": [
    "feature_type",
    "id",
    "params"
  ],
  "additionalProperties": false
}