{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Swarf Surface Feature",
  "description": "Freeform surface to be machined with swarf (flank milling).",
  "type": "object",
  "properties": {
    "feature_type": {
      "type": "string",
      "const": "swarf_surface_feature"
    },
    "id": {
      "type": "string",
      "description": "Unique feature identifier."
    },
    "metadata": {
      "type": "object",
      "properties": {
        "source": {
          "type": "object",
          "properties": {
            "primary_standard": {
              "type": "string"
            },
            "reference_standards": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "primary_standard"
          ],
          "default": {
            "primary_standard": "ISO 10303-238",
            "reference_standards": [
              "ISO 14649-11"
            ]
          }
        }
      },
      "required": [
        "source"
      ]
    },
    "params": {
      "type": "object",
      "properties": {
        "csys_id": {
          "type": "string"
        },
        "surface_ref": {
          "type": "string"
        },
        "u_min": {
          "type": "number"
        },
        "u_max": {
          "type": "number"
        },
        "v_min": {
          "type": "number"
        },
        "v_max": {
          "type": "number"
        },
        "leading_edge_curve_ref": {
          "type": "string",
          "description": "Reference to leading edge curve on the surface."
        },
        "trailing_edge_curve_ref": {
          "type": "string",
          "description": "Reference to trailing edge curve on the surface."
        }
      },
      "required": [
        "csys_id",
        "surface_ref",
        "u_min",
        "u_max",
        "v_min",
        "v_max",
        "leading_edge_curve_ref",
        "trailing_edge_curve_ref"
      ]
    }
  },
  "required": [
    "feature_type",
    "id",
    "csys_id",
    "surface_ref",
    "u_min",
    "u_max",
    "v_min",
    "v_max"
  ],
  "additionalProperties": false
}