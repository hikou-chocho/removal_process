{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Freeform Surface Feature",
  "description": "General freeform surface region for 3D milling.",
  "type": "object",
  "properties": {
    "feature_type": {
      "type": "string",
      "const": "freeform_surface_feature"
    },
    "id": {
      "type": "string",
      "description": "Unique feature identifier."
    },
    "metadata": {
      "type": "object",
      "properties": {
        "source": {
          "type": "object",
          "properties": {
            "primary_standard": {
              "type": "string"
            },
            "reference_standards": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "primary_standard"
          ],
          "default": {
            "primary_standard": "ISO 10303-238",
            "reference_standards": [
              "ISO 10303-224"
            ]
          }
        }
      },
      "required": [
        "source"
      ]
    },
    "params": {
      "type": "object",
      "properties": {
        "csys_id": {
          "type": "string"
        },
        "surface_ref": {
          "type": "string",
          "description": "Identifier of underlying CAD surface (B-rep or parametric)."
        },
        "u_min": {
          "type": "number"
        },
        "u_max": {
          "type": "number"
        },
        "v_min": {
          "type": "number"
        },
        "v_max": {
          "type": "number"
        },
        "thickness": {
          "type": "number",
          "description": "Optional thickness for shell-like regions."
        }
      },
      "required": [
        "csys_id",
        "surface_ref",
        "u_min",
        "u_max",
        "v_min",
        "v_max",
        "thickness"
      ]
    }
  },
  "required": [
    "feature_type",
    "id",
    "csys_id",
    "surface_ref",
    "u_min",
    "u_max",
    "v_min",
    "v_max"
  ],
  "additionalProperties": false
}