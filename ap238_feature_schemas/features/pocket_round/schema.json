{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Round Pocket Feature",
  "description": "Cylindrical (round) pocket on a planar surface.",
  "type": "object",
  "properties": {
    "feature_type": {
      "type": "string",
      "const": "pocket_round"
    },
    "id": {
      "type": "string",
      "description": "Unique feature identifier."
    },
    "metadata": {
      "type": "object",
      "properties": {
        "source": {
          "type": "object",
          "properties": {
            "primary_standard": {
              "type": "string"
            },
            "reference_standards": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "primary_standard"
          ],
          "default": {
            "primary_standard": "ISO 10303-238",
            "reference_standards": [
              "ISO 10303-224"
            ]
          }
        }
      },
      "required": [
        "source"
      ]
    },
    "params": {
      "type": "object",
      "properties": {
        "csys_id": {
          "type": "string"
        },
        "origin_x": {
          "type": "number"
        },
        "origin_y": {
          "type": "number"
        },
        "radius": {
          "type": "number",
          "minimum": 0
        },
        "depth": {
          "type": "number"
        }
      },
      "required": [
        "csys_id",
        "origin_x",
        "origin_y",
        "radius",
        "depth"
      ]
    }
  },
  "required": [
    "feature_type",
    "id",
    "params"
  ],
  "additionalProperties": false
}