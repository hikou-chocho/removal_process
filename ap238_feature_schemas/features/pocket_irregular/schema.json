{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Irregular Pocket Feature",
  "description": "Pocket defined by an arbitrary closed 2D boundary.",
  "type": "object",
  "properties": {
    "feature_type": {
      "type": "string",
      "const": "pocket_irregular"
    },
    "id": {
      "type": "string",
      "description": "Unique feature identifier."
    },
    "metadata": {
      "type": "object",
      "properties": {
        "source": {
          "type": "object",
          "properties": {
            "primary_standard": {
              "type": "string"
            },
            "reference_standards": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "primary_standard"
          ],
          "default": {
            "primary_standard": "ISO 10303-238",
            "reference_standards": [
              "ISO 10303-224"
            ]
          }
        }
      },
      "required": [
        "source"
      ]
    },
    "params": {
      "type": "object",
      "properties": {
        "csys_id": {
          "type": "string"
        },
        "plane_axis": {
          "type": "string",
          "enum": [
            "+Z",
            "-Z"
          ]
        },
        "boundary": {
          "type": "array",
          "description": "Closed polygon/polyline describing the pocket boundary.",
          "items": {
            "type": "object",
            "properties": {
              "x": {
                "type": "number"
              },
              "y": {
                "type": "number"
              }
            },
            "required": [
              "x",
              "y"
            ]
          },
          "minItems": 3
        },
        "depth": {
          "type": "number"
        }
      },
      "required": [
        "csys_id",
        "plane_axis",
        "boundary",
        "depth"
      ]
    }
  },
  "required": [
    "feature_type",
    "id",
    "csys_id",
    "plane_axis",
    "boundary",
    "depth"
  ],
  "additionalProperties": false
}