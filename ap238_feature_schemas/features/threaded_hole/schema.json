{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Threaded Hole Feature",
  "description": "Internal threaded hole.",
  "type": "object",
  "properties": {
    "feature_type": {
      "type": "string",
      "const": "threaded_hole"
    },
    "id": {
      "type": "string",
      "description": "Unique feature identifier."
    },
    "metadata": {
      "type": "object",
      "properties": {
        "source": {
          "type": "object",
          "properties": {
            "primary_standard": {
              "type": "string"
            },
            "reference_standards": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "primary_standard"
          ],
          "default": {
            "primary_standard": "ISO 10303-238",
            "reference_standards": [
              "ISO 14649-11"
            ]
          }
        }
      },
      "required": [
        "source"
      ]
    },
    "params": {
      "type": "object",
      "properties": {
        "csys_id": {
          "type": "string"
        },
        "origin_x": {
          "type": "number"
        },
        "origin_y": {
          "type": "number"
        },
        "axis": {
          "type": "string",
          "enum": [
            "+Z",
            "-Z",
            "+X",
            "-X",
            "+Y",
            "-Y"
          ]
        },
        "major_diameter": {
          "type": "number"
        },
        "minor_diameter": {
          "type": "number"
        },
        "thread_length": {
          "type": "number"
        },
        "pitch": {
          "type": "number"
        },
        "thread_standard": {
          "type": "string"
        }
      },
      "required": [
        "csys_id",
        "origin_x",
        "origin_y",
        "axis",
        "major_diameter",
        "minor_diameter",
        "thread_length",
        "pitch",
        "thread_standard"
      ]
    }
  },
  "required": [
    "feature_type",
    "id",
    "csys_id",
    "origin_x",
    "origin_y",
    "axis",
    "major_diameter",
    "thread_length",
    "pitch"
  ],
  "additionalProperties": false
}