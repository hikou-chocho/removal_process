{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OD Turning Profile Feature",
  "description": "Outer diameter turning profile along Z axis.",
  "type": "object",
  "properties": {
    "feature_type": {
      "type": "string",
      "const": "turn_od_profile"
    },
    "id": {
      "type": "string",
      "description": "Unique feature identifier."
    },
    "metadata": {
      "type": "object",
      "properties": {
        "source": {
          "type": "object",
          "properties": {
            "primary_standard": {
              "type": "string"
            },
            "reference_standards": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "primary_standard"
          ],
          "default": {
            "primary_standard": "ISO 10303-238",
            "reference_standards": [
              "ISO 14649-121"
            ]
          }
        }
      },
      "required": [
        "source"
      ]
    },
    "params": {
      "type": "object",
      "properties": {
        "csys_id": {
          "type": "string"
        },
        "profile": {
          "type": "array",
          "description": "List of (z, radius) pairs.",
          "items": {
            "type": "object",
            "properties": {
              "z": {
                "type": "number"
              },
              "radius": {
                "type": "number"
              }
            },
            "required": [
              "z",
              "radius"
            ]
          },
          "minItems": 2
        }
      },
      "required": [
        "csys_id",
        "profile"
      ]
    }
  },
  "required": [
    "feature_type",
    "id",
    "csys_id",
    "profile"
  ],
  "additionalProperties": false
}