{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Blade Surface Feature",
  "description": "Blade or impeller-like surface defined on a freeform base.",
  "type": "object",
  "properties": {
    "feature_type": {
      "type": "string",
      "const": "blade_surface_feature"
    },
    "id": {
      "type": "string",
      "description": "Unique feature identifier."
    },
    "metadata": {
      "type": "object",
      "properties": {
        "source": {
          "type": "object",
          "properties": {
            "primary_standard": {
              "type": "string"
            },
            "reference_standards": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "primary_standard"
          ],
          "default": {
            "primary_standard": "ISO 10303-238",
            "reference_standards": [
              "ISO 10303-224"
            ]
          }
        }
      },
      "required": [
        "source"
      ]
    },
    "params": {
      "type": "object",
      "properties": {
        "csys_id": {
          "type": "string"
        },
        "pressure_side_surface_ref": {
          "type": "string"
        },
        "suction_side_surface_ref": {
          "type": "string"
        },
        "hub_curve_ref": {
          "type": "string"
        },
        "shroud_curve_ref": {
          "type": "string"
        },
        "thickness": {
          "type": "number"
        }
      },
      "required": [
        "csys_id",
        "pressure_side_surface_ref",
        "suction_side_surface_ref",
        "hub_curve_ref",
        "shroud_curve_ref",
        "thickness"
      ]
    }
  },
  "required": [
    "feature_type",
    "id",
    "params"
  ],
  "additionalProperties": false
}