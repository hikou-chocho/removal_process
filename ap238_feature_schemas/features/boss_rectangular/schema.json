{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Rectangular Boss Feature",
  "description": "Protruding rectangular boss on a planar face.",
  "type": "object",
  "properties": {
    "feature_type": {
      "type": "string",
      "const": "boss_rectangular"
    },
    "id": {
      "type": "string",
      "description": "Unique feature identifier."
    },
    "metadata": {
      "type": "object",
      "properties": {
        "source": {
          "type": "object",
          "properties": {
            "primary_standard": {
              "type": "string"
            },
            "reference_standards": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "primary_standard"
          ],
          "default": {
            "primary_standard": "ISO 10303-238",
            "reference_standards": [
              "ISO 10303-224"
            ]
          }
        }
      },
      "required": [
        "source"
      ]
    },
    "params": {
      "type": "object",
      "properties": {
        "csys_id": {
          "type": "string"
        },
        "origin_x": {
          "type": "number"
        },
        "origin_y": {
          "type": "number"
        },
        "width": {
          "type": "number"
        },
        "length": {
          "type": "number"
        },
        "height": {
          "type": "number"
        },
        "draft_angle_deg": {
          "type": "number",
          "description": "Optional wall draft angle."
        }
      },
      "required": [
        "csys_id",
        "origin_x",
        "origin_y",
        "width",
        "length",
        "height",
        "draft_angle_deg"
      ]
    }
  },
  "required": [
    "feature_type",
    "id",
    "params"
  ],
  "additionalProperties": false
}